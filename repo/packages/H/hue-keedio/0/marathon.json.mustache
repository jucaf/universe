{
    "id": "{{hue.name}}",
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "gethue/hue:20191112-135001",
            "privileged": true,
            "forcePullImage": false,
            "parameters": [],
            "network": "BRIDGE",
            "portMappings": [
                {
                    "containerPort": 8888,
                    "hostPort": 0,
                    "servicePort": {{hue.port}},
                    "protocol": "tcp"
                }
            ]
        }
    },
    "cmd": "apt-get update -y && apt-get install -y wget openjdk-8-jre && wget http://api.{{hue.hdfs-service-name}}.marathon.l4lb.thisdcos.directory/v1/endpoints/core-site.xml && wget http://api.{{hue.hdfs-service-name}}.marathon.l4lb.thisdcos.directory/v1/endpoints/hdfs-site.xml && mv core-site.xml $MESOS_SANDBOX/hadoop-3.2.1/etc/hadoop/core-site.xml && mv hdfs-site.xml $MESOS_SANDBOX/hadoop-3.2.1/etc/hadoop/hdfs-site.xml && mv $MESOS_SANDBOX/hadoop-3.2.1 /usr/share/hue/hadoop-3.2.1 && cp -f $MESOS_SANDBOX/hue.ini /usr/share/hue/desktop/conf/hue.ini && cp -f $MESOS_SANDBOX/httpfs-site.xml /usr/share/hue/hadoop-3.2.1/etc/hadoop/httpfs-site.xml && update-java-alternatives -s java-1.8.0-openjdk-amd64 && export JAVA_HOME=/usr/lib/jvm/java-1.8.0-openjdk-amd64 && cd /usr/share/hue/hadoop-3.2.1/bin/ && ./hdfs --daemon start httpfs && cd /usr/share/hue/ && ./startup.sh",
    "cpus": {{hue.cpus}},
    "disk": {{hue.disk}},
    "mem": {{hue.mem}},
    "instances": 1,
    "env": {
        "YARN_SERVICE_NAME": "{{hue.yarn-service-name}}",
        "HTTP_PORT":  "{{hue.port}}"
    },
    "upgradeStrategy": {
        "maximumOverCapacity": 1,
        "minimumHealthCapacity": 1
    },
    "healthChecks": [
        {
            "protocol": "HTTP",
            "path": "/",
            "portIndex": 0,
            "gracePeriodSeconds": 300,
            "intervalSeconds": 60,
            "timeoutSeconds": 20,
            "maxConsecutiveFailures": 3
        }
    ],
    "uris": [
        "{{resource.assets.uris.hadoop}}",
        "{{resource.assets.uris.hue-ini}}",
        "{{resource.assets.uris.httpfs-xml}}"
    ],
    "labels": {
        "DCOS_SERVICE_NAME": "{{hue.name}}",
        "DCOS_SERVICE_PORT_INDEX": "0",
        "DCOS_SERVICE_SCHEME": "http",
        "HAPROXY_GROUP": "external",
        "DCOS_PACKAGE_IS_FRAMEWORK": "false"
    }
}
